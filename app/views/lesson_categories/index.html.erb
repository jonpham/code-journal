<div class="container">
  <h1>Add Stand-In Page for Lesson Category Index</h1>
  <h2>Categories</h2>
  <div>
    For Now Use a List:<br>
    <%= link_to "Create a New Category" , "/lesson_categories/new" %>
  </div>
  <hr>
  <div class="lesson_categories">
    <% @categories.each do |category| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= link_to category.name, "/lesson_categories/#{category.id}" %></h3>
        </div>
        <div class="panel-body">
          <ul>
            <% category.lessons.each do |lesson| %>
              <li><%= link_to lesson.name, "/lessons/#{lesson.id}" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>